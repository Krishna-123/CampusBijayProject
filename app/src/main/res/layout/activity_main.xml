<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techfiesta.aot.campusplacement.MainActivity">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/quesBlock"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:scrollbars="vertical"
        android:padding="10dp"
        android:text="questions are here!!"
        android:textSize="20sp" />


    <RadioGroup android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="130dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="option1"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:layout_height="wrap_content"
          android:layout_width="match_parent"
            android:id="@+id/option2"
            android:text="option1"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/option3"
            android:text="option1"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/option4"
            android:text="option1"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <TextView
        android:id="@+id/ansBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="69dp"
        android:text="Answer is here"
        android:textSize="20sp" />

    <Button
        android:id="@+id/nextques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ansBlock"
        android:layout_alignBottom="@+id/ansBlock"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:onClick="nextQuestion"
        android:text="NextQus  >>" />
</RelativeLayout>
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:onClick="startTest"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:text="Start Test!!" />


</RelativeLayout>
